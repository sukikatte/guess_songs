<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".competitiveMode.RoomStateActivity"
    android:padding="16dp"
    android:gravity="center">

    <!-- Room name and password input fields -->

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start a Competition"
        android:textSize="35sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5"/>

    <EditText
        android:id="@+id/etRoomName"
        android:padding="10dp"
        android:background="@drawable/edittext_background"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:hint="Please enter a room name"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etRoomPassword"
        android:padding="10dp"
        android:background="@drawable/edittext_background"
        android:layout_width="0dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_height="wrap_content"
        android:hint="Please enter a room password"
        android:inputType="numberPassword"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/etRoomName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <android.widget.Button
        android:background="@drawable/button_background"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:id="@+id/createRoomButton"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text="Create a Room"

        android:onClick="onCreateRoomClick"
        app:layout_constraintTop_toBottomOf="@id/etRoomPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="70dp" />

    <android.widget.Button
        android:background="@drawable/button_background"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:id="@+id/joinRoomButton"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text="Join a Room"
        android:onClick="onJoinRoomClick"
        app:layout_constraintTop_toBottomOf="@id/createRoomButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp" />

    <android.widget.Button
        android:background="@drawable/button_background"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:id="@+id/BacktoMain"

        android:text="Back to Main"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:onClick="onBackToMainClick"
        app:layout_constraintTop_toBottomOf="@id/joinRoomButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="120dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
