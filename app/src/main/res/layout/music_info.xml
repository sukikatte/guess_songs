<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    app:contentPadding="10dp"
    app:cardCornerRadius="13dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <TextView
            android:id="@+id/item_local_music_songName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="12dp"
            android:maxEms="7"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Title"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_local_music_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_local_music_songName"
            android:layout_alignLeft="@id/item_local_music_songName"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="12dp"
            android:text="Artist"
            android:textColor="#6B7280"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/item_local_music_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/item_local_music_author"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/item_local_music_author"
            android:text="-"/>


        <TextView
            android:id="@+id/item_local_music_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/item_local_music_author"
            android:layout_toRightOf="@id/item_local_music_line"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Album"
            android:textColor="#6B7280"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/local_bottom_musicPlayer_next"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="26dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="75dp"
            android:src="@drawable/next" />

        <ImageView
            android:id="@+id/local_bottom_musicPlayer_play" android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="26dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="115dp"
            android:layout_toLeftOf="@id/local_bottom_musicPlayer_next"
            android:src="@drawable/play" />


        <ImageView
            android:id="@+id/local_bottom_musicPlayer_previous"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="26dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="175dp"
            android:layout_toLeftOf="@id/local_bottom_musicPlayer_play"
            android:src="@drawable/previous" />




        <TextView
            android:id="@+id/item_local_music_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="0dp"

            android:layout="@id/item_local_music_author"
            android:text="04:30"
            android:textColor="#000000"
            android:textSize="20sp" />




    </RelativeLayout>


</androidx.cardview.widget.CardView>